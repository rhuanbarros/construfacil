<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="net.rhuanbarros.construfacilnovo2.CriarListaActivity"

    android:id="@+id/criarListaView"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp"

    tools:showIn="@layout/app_bar_main" >

    <!--tools:context="net.rhuanbarros.construfacilnovo2.MainActivity"-->

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtview_incluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique no item para incluir na lista"

        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/framelayout_catalogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/viewPraDividirTela"
        android:layout_marginRight="0dp"

        />

    <FrameLayout
        android:choiceMode="singleChoice"
        android:listSelector="#666666"

        app:layout_constraintTop_toBottomOf="@id/txtview_incluir"

        android:id="@+id/framelayout_catalogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"

        app:layout_constraintBottom_toTopOf="@+id/txtMaterial"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintRight_toLeftOf="@+id/viewPraDividirTela"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="1.0" />


    <View
        android:id="@+id/viewPraDividirTela"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtview_remover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique no item para remover da lista"


        android:layout_marginLeft="81dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"

        app:layout_constraintBottom_toTopOf="@+id/listaView"
        app:layout_constraintLeft_toLeftOf="@+id/viewPraDividirTela"
        app:layout_constraintTop_toTopOf="parent"


        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


    <ListView
        android:id="@+id/listaView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintTop_toBottomOf="@id/txtview_remover"
        app:layout_constraintLeft_toRightOf="@+id/viewPraDividirTela"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtMaterial"

        app:layout_constraintVertical_bias="1.0" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtMaterial"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/txtPesquisa"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Digite aqui para pesquisar um item"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>
